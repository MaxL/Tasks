      "required": true
    },
    "SIGNUP": {
      "description": "Is signup enabled?",
      "value": "true",
      "required": true
    },
    "PEPPER": {
      "description": "A ramdom key for securing things",
      "generator": "secret",
      "required": true
    }
  }
