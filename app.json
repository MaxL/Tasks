{
  "name": "Tasks",
  "description": "Simple tasks & notes manager written in PHP, jQuery and Bootstrap using a custom flat file database.",
  "repository": "https://github.com/m1guelpf/Tasks",
  "keywords": ["Tasks", "php", "m1guelpf"],
  "website": "https://projects.miguelpiedrafita.com/Tasks",
  "env": {
    "SITENAME": {
      "description": "The Title of your site",
